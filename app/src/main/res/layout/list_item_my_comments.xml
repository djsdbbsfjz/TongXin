<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout_other_info_my_comments"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_user_head_picture_my_comments"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:src="@mipmap/ic_launcher_round"/>

            <View
                android:id="@+id/view_divide_line1_my_comments"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/text_view_user_name_my_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view_divide_line1_my_comments"
                android:layout_toRightOf="@id/image_view_user_head_picture_my_comments"
                android:text="白白白白白白菜"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14dp"/>


            <TextView
                android:id="@+id/text_view_comment_time_my_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_divide_line1_my_comments"
                android:layout_toRightOf="@id/image_view_user_head_picture_my_comments"
                android:text="2017-4-23"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_view_comment_content_my_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout_other_info_my_comments"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:maxLines="2"
            android:text="标题"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_post_of_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/text_view_comment_content_my_comments"
            android:background="@color/colorDivider"
            android:text="原帖："
            android:textSize="16dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>